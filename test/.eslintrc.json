{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6
  },
  "rules": {
    "compat/compat": "error",
    "indent": [
      "off",
      "always"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-console": [
      "off",
      "always"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
